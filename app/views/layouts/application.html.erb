<!DOCTYPE html>
<html>
  <head>
    <title>Eventbrite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <%= link_to "EvenBrite", root_path, class:"navbar-brand text-primary" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        
        <li class="nav-item">
          <%= link_to "Contact", contact_path, class:"nav-link" %>
        </li>
      </ul>
    </div>

    <%= link_to "Creer un evenement", new_event_path, class:"btn btn-success", role:"button" %>

    <% if logged_in? == true%>
      <div class="btn-group">
      <button type="button" class="btn btn-outline-success">Bienvenue <%= current_user.first_name %></button>
      <button type="button" class="btn btn-success dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="sr-only">Toggle Dropdown</span>
      </button>
      <div class="dropdown-menu">
        <%= link_to "Ton profil", user_path(id: current_user.id), class:"dropdown-item" %>
        <div class="dropdown-divider"></div>
        <%= link_to "DÃ©connexion", session_path(session.id), method: :delete, class:"dropdown-item" %>
      </div>
      </div>
      <% else %>
      <%= link_to "Inscription", new_user_path, class:"btn btn-outline-info btn-sm", role:"button" %>
      <%= link_to "Connexion", new_session_path, class:"btn btn-info btn-sm", role:"button" %>
    <% end %>

  </nav>

  <body>
    <%= yield %>
  </body>
</html>
